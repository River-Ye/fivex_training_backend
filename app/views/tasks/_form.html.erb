<% if task.errors.any? %>
  <ul>
    <% task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(task) do |form| %>
  <div class="field">
    <%= form.label :title, '標題:' %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content, '內容:' %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.submit %>
  </div>
<% end %>