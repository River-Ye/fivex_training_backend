<h1><%= t("task_index") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("title") %></th>
      <th><%= t("content") %></th>
      <th colspan="2" ><%= t("action") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <th><%= link_to task.title, task_path(task) %></th>
        <th><%= task.content %></th>
        <th><%= link_to t("edit"), edit_task_path(task) %></th>
        <th><%= link_to t("delete"), task_path(task), method: :delete, data: { confirm: t("delete_confirm") } %></th>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t("new_task"), new_task_path %>